<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>GWDEV</groupId>
	<artifactId>GWDEV</artifactId>
	<version>0.0.5</version>
	<packaging>jar</packaging>
	
<!-- Repositories -->
   
  <repositories>
    <repository>
      <id>xframium</id>
      <name>xFramium</name>
      <url>http://www.xframium.org/repository</url>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
      </snapshots>
    </repository>
    
    <repository>
        <id>repo1.perfectomobile.com</id>
        <name>Perfecto mobile</name>
        <url>https://repo1.perfectomobile.com/public/repositories/maven</url>
    </repository>
    
    
  </repositories>
  
 <!-- Build -->
  
  <build>
 <directory>target</directory> 
 <outputDirectory>test-output/target/classes</outputDirectory> 
 <testOutputDirectory>target/classes</testOutputDirectory>
 <sourceDirectory>src</sourceDirectory>  
 <testSourceDirectory>test</testSourceDirectory>
 <testResources>
 <testResource>
 <directory>resources</directory>
 </testResource>
 </testResources>
 <plugins>	
	<plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-compiler-plugin</artifactId>
		<version>3.6.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>	
	</plugin>
	<plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-surefire-plugin</artifactId>
		<version>2.19</version>
				 <configuration>
				 <outputDirectory>${basedir}/ExtReports</outputDirectory>
					<systemPropertyVariable>
					 <config>${ConfigFile}</config>
					 </systemPropertyVariable>
					 <testFailureIgnore>false</testFailureIgnore>
					 <additionalClasspathElements>
					 <additionalClasspathElement>src</additionalClasspathElement>
					 </additionalClasspathElements>
					 <suiteXmlFiles>
					 <suiteXmlFile>testng.xml</suiteXmlFile>
					 </suiteXmlFiles>
				  </configuration>
	</plugin>
	<plugin>
		<groupId>org.apache.maven.plugins</groupId>	
		<artifactId>maven-jar-plugin</artifactId>
		<version>2.4</version>
	</plugin>
	<plugin>
   		<groupId>org.apache.maven.plugins</groupId>
       	<artifactId>maven-source-plugin</artifactId>
    	<version>3.0.1</version>
       		<executions>
          		<execution>
            		<id>attach-sources</id>
            		<goals>
              		<goal>jar</goal>
            		</goals>
          		</execution>
        	</executions>
    </plugin>
    <plugin>
      <artifactId>maven-assembly-plugin</artifactId>
      <configuration>
        <archive>
          <manifest>
            <mainClass>fully.qualified.MainClass</mainClass>
          </manifest>
        </archive>
        <descriptorRefs>
          <descriptorRef>jar-with-dependencies</descriptorRef>
        </descriptorRefs>
      </configuration>
    </plugin>
</plugins>
</build>
  
